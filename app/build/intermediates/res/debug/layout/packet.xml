<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

    
  <EditText
      android:id="@+id/name_packet"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/dialog_packet_name" />

  <EditText
      android:id="@+id/date_packet"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/dialog_packet_data" />
  
  <Button
    android:id="@+id/add_packet"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/dialog_setting_save"
  />
  <ListView
    android:id="@+id/list_packet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  />
</LinearLayout>
